// Motion blur
compositor MotionBlur
{
    technique
    {
		// Temporary textures
		texture scene target_width target_height PF_R8G8B8
		texture sum target_width target_height PF_R8G8B8
		texture temp target_width target_height PF_R8G8B8
		
		// Original scene
		target scene
		{
			input previous
		}
		target sum
		{
			input previous
			only_initial on
		}
		target temp
		{
			input none
			
			pass render_quad
			{
				material Compositor/Combine
				input 0 scene
				input 1 sum
			}
		}
		target sum
		{
			input none
			
			pass render_quad
			{
				material Compositor/Copyback
				input 0 temp
			}
		}
		target_output
		{
			input none
			
			pass render_quad
			{
				material Compositor/MotionBlur
				input 0 sum
			}
		}
	}
}

// Gaussian Blur + Depth field based on depth map
compositor DOF
{
	technique 
	{
		compositor_logic GaussianBlur
	
		// Temporary textures
		texture mrt_output target_width target_height PF_FLOAT16_RGBA PF_FLOAT16_RGBA
		// Depth map 
		texture depthMap target_width target_height PF_A8R8G8B8
		texture scene target_width target_height PF_A8R8G8B8		
		// Blur scaled
		texture blur target_width target_height PF_A8R8G8B8
		
		target scene
		{
			input previous
		}
		// Create RTT
		target mrt_output
		{
			input none
			pass clear
			{
			}
			
			shadows off
			material_scheme GBuffer
			
			pass render_scene
			{
				//These values are synchronized with the code
				first_render_queue 10
				last_render_queue  79	
			}
		}
		// Depth map from RTT
		target depthMap
        {
			input none
			
			pass render_quad
			{
				material ShowDepth				
				input 0 mrt_output 1
			}
        }
		// Blur horizontally
		target blur
		{
			input none
            
			pass render_quad
			{
				material Compositor/GaussianBloom
				input 0 scene
				identifier 700
			}
		}
		// Blur vertically
		target blur		
		{
            input none
            
            pass render_quad
            {
                // Renders a fullscreen quad with a material
				material Compositor/GaussianBloom
                input 0 blur
				identifier 701
            }
		}
		// Blend original scene with Blur using Depth as mask
		target_output
		{
			input none
			
			pass render_quad
			{			   
			   material Compositor/DOF_Blend
			   input 0 scene
			   input 1 depthMap
			   input 2 blur
			}
		}
	}
}

// Radial blur effect
compositor RadialBlur
{
    technique
    {
        // Temporary textures
        texture scene target_width target_height PF_A8R8G8B8

        target scene
        {
            input previous
        }

		target_output
        {
            // Start with clear output
            input none
            // Blur vertically
            pass render_quad
            {
                // Renders a fullscreen quad with a material
				material Compositor/Radial_Blur
                input 0 scene
            }
        }
    }
}

